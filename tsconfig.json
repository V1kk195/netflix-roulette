{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "types": ["cypress", "@testing-library/cypress"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
    "exclude": ["node_modules"]
}
